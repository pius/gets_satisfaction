require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('gets_satisfaction', '0.1.0') do |p|
  p.description    = "Integrates your Ruby app with Get Satisfaction FastPass."
  p.url            = "http://github.com/pius/gets_satisfaction"
  p.author         = "Scott Fleckenstein, Pius Uzamere"
  p.email          = "scott@getsatisfaction"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = %w(active_support oauth erb)
end